{
    "containers": {
        "usersContainer": {
            "image": "",
            "environment": {
                "APP_ENV": "release",
                "NODE_ENV": "production"
            },
            "ports": {
                "80": "HTTP"
            }
        }
    },
    "publicEndpoint": {
        "containerName": "usersContainer",
        "containerPort": 80,
        "healthCheck": {
            "healthyThreshold": 10,
            "unhealthyThreshold": 10,
            "timeoutSeconds": 120,
            "intervalSeconds": 300,
            "path": "/ping",
            "successCodes": "200-499"
        }
    }
}